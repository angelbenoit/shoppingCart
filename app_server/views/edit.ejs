<% include ./partials/header.ejs %>
<div class="container">
    <h1 id="textColor">Edit <%= foundItem.item %> </h1>
    <div>
        <form action="/<%= foundItem.id %>?_method=PUT" method="POST">
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Item</span>
                <input class="form-control" type="text" name="item" value="<%= foundItem.item %>"><br>
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Price</span>
                <input class="form-control" type="number" name="price" value="<%= foundItem.price %>">
            </div>
            <br>
            <button class="btn btn-info">Submit</button>
        </form>
    </div>
</div>
<% include ./partials/footer.ejs %>